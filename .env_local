DB_HOST=localhost
DB_PORT=3306
DB_NAME=moon_app_huesped
DB_USER=root
DB_PASS=12345678
DB_CHARSET=utf8mb4

# ----------------------------------------------
# APPLICATION CONFIGURATION
# ----------------------------------------------
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost.local/app_huesped
TIMEZONE=Europe/Madrid

# ----------------------------------------------
# CORS CONFIGURATION
# ----------------------------------------------
